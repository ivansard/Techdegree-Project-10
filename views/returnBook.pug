extends layout.pug

block main

    h1 #{loan.Patron.first_name} #{loan.Patron.last_name}: Return Book

    include includes/errors

    p
        strong Book Title: 
        | #{loan.Book.title}
    p
        strong Loaned By: 
        | #{loan.Patron.first_name} #{loan.Patron.last_name}
    p
        strong Loaned On: 
        | #{loan.loaned_on}
    p
        strong Return By: 
        | #{loan.return_by}
    form(action=`/books/return/${loan.id}`, method='POST')
        p
            label(for='returned_on') Returned on:
            input#returned_on(type='text',name='returned_on' value=today)
        p
            input(type='submit', value='Return Book')