extends layout.pug

block main 

    h1 New Loan
    form
        p
            label(for='book_id') Book
            select#book_id
                each book in allBooks
                    option(value=book.id) #{book.title}
        p
            label(for='patron_id') Patron
            select#patron_id
                each patron in allPatrons
                    option(value=patron.id) #{patron.first_name} #{patron.last_name}
        p
            label(for='loaned_on') Loaned on:
            input#loaned_on(type='text', value='Sun May 22 2016')
        p
            label(for='return_by') Return by:
            input#return_by(type='text', value='Sun May 29 2016')
        p
            input(type='submit', value='Create New Loan')